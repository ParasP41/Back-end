<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Todo Grid with Image</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen p-6">

  <a  href="/" class="text-3xl text-blue-900 block font-bold mb-6 text-center">Back to Home</a>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
    <%if(todo.length>0){%>
        <%todo.forEach((element) => {%>
            <div class="bg-white rounded-md shadow-md overflow-hidden">
              <img src="<%=element.imageurl%>" alt="Todo image" class="w-full h-40 object-cover">
              <div class="p-5 space-y-3">
                <h2 class="text-xl font-semibold text-gray-800"><%=element.title%></h2>
                <p class="text-sm text-gray-600"><%=element.description%></p>
                <div class="flex justify-end space-x-3">
                  <a href="/edit/<%=element._id%>" class="text-blue-500 hover:underline text-sm">Edit</a>
                  <a href="/delete/<%=element._id%>" class="text-red-500 hover:underline text-sm">Delete</a>
                </div>
              </div>
            </div>
        <%});%>
        <%}%>

  </div>

</body>
</html>
