  <!-- Create New Post Form -->
  <section class="max-w-6xl mx-auto mt-8 p-6 bg-white rounded-lg shadow-lg">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">Create New Post</h2>
    <form action="/create" method="POST" class="space-y-6">
      <div>
        <label class="block mb-2 text-gray-700">Title</label>
        <input type="text" name="title" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none" placeholder="Blog Title">
      </div>
      <div>
        <label class="block mb-2 text-gray-700">Content</label>
        <textarea name="content" rows="5" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none" placeholder="Write your blog content..."></textarea>
      </div>
      <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-2 rounded-lg transition">Publish</button>
    </form>
  </section>

